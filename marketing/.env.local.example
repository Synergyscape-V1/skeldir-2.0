# SKELDIR Marketing Website - Environment Variables
# Copy this file to .env.local and fill in your values

# ==============================================
# Backend API
# ==============================================
NEXT_PUBLIC_API_URL=https://api.skeldir.com
# For local development:
# NEXT_PUBLIC_API_URL=http://localhost:8000

# ==============================================
# Analytics
# ==============================================
# Google Analytics 4
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Mixpanel (optional)
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token_here

# ==============================================
# Marketing & Lead Generation
# ==============================================
# HubSpot (for contact forms)
NEXT_PUBLIC_HUBSPOT_PORTAL_ID=your_hubspot_portal_id
NEXT_PUBLIC_HUBSPOT_FORM_ID=your_form_id

# Mailchimp (for newsletter)
NEXT_PUBLIC_MAILCHIMP_API_KEY=your_mailchimp_api_key
NEXT_PUBLIC_MAILCHIMP_LIST_ID=your_list_id

# ==============================================
# Feature Flags (optional)
# ==============================================
NEXT_PUBLIC_ENABLE_BLOG=true
NEXT_PUBLIC_ENABLE_PRICING=true
NEXT_PUBLIC_ENABLE_DEMO_REQUEST=true

# ==============================================
# Social Links
# ==============================================
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/skeldir
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/skeldir
NEXT_PUBLIC_GITHUB_URL=https://github.com/skeldir

# ==============================================
# Product Links
# ==============================================
NEXT_PUBLIC_APP_URL=https://app.skeldir.com
NEXT_PUBLIC_DOCS_URL=https://docs.skeldir.com

# ==============================================
# Development
# ==============================================
# Set to 'development' for local dev, 'production' for prod
NODE_ENV=development
