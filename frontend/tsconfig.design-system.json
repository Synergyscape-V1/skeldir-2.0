{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    // Vite environment types
    "src/vite-env.d.ts",

    // D0 - Token Foundation
    "src/lib/utils.ts",
    "src/assets/brand/colors.css",

    // D1 - Atomic Primitives (actively used in harnesses)
    "src/components/ui/badge.tsx",
    "src/components/ui/button.tsx",
    "src/components/ui/card.tsx",
    "src/components/ui/input.tsx",
    "src/components/ui/label.tsx",
    "src/components/ui/separator.tsx",
    "src/components/ui/checkbox.tsx",
    "src/components/ui/alert.tsx",
    "src/components/ui/tabs.tsx",
    "src/components/ui/avatar.tsx",
    "src/components/ui/dialog.tsx",
    "src/components/ui/textarea.tsx",
    "src/components/ui/toast.tsx",
    "src/components/ui/toaster.tsx",
    "src/components/ui/request-status.tsx",

    // D2 - Composite Assemblies (authoritative exports)
    "src/components/composites/**/*",
    "src/components/dashboard/ActivitySection.tsx",
    "src/components/dashboard/UserInfoCard.tsx",
    "src/components/dashboard/DataConfidenceBar.tsx",
    "src/components/dashboard/BulkActionModal.tsx",
    "src/components/dashboard/BulkActionToolbar.tsx",
    "src/components/error-banner/ErrorBanner.tsx",
    "src/components/error-banner/ErrorBannerContainer.tsx",
    "src/components/error-banner/ErrorBannerProvider.tsx",
    "src/components/ConfidenceScoreBadge.tsx",

    // Harness Pages (proof substrates)
    "src/pages/D1AtomicsHarness.tsx",
    "src/pages/D2CompositesHarness.tsx",

    // Supporting Infrastructure
    "src/hooks/use-error-banner.ts",
    "src/contexts/VerificationSyncContext.tsx",
    "src/types/error-banner.ts",
    "src/shared/schema.ts",

    // Supporting components (dependencies of D2 composites)
    "src/components/ConfidenceTooltip.tsx",
    "src/components/CorrelationIdDisplay.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/api/**",
    "src/services/**",
    "src/components/ui/accordion.tsx",
    "src/components/ui/alert-dialog.tsx",
    "src/components/ui/aspect-ratio.tsx",
    "src/components/ui/calendar.tsx",
    "src/components/ui/carousel.tsx",
    "src/components/ui/collapsible.tsx",
    "src/components/ui/command.tsx",
    "src/components/ui/context-menu.tsx",
    "src/components/ui/drawer.tsx",
    "src/components/ui/dropdown-menu.tsx",
    "src/components/ui/form.tsx",
    "src/components/ui/hover-card.tsx",
    "src/components/ui/input-otp.tsx",
    "src/components/ui/menubar.tsx",
    "src/components/ui/navigation-menu.tsx",
    "src/components/ui/popover.tsx",
    "src/components/ui/progress.tsx",
    "src/components/ui/radio-group.tsx"
  ]
}
